<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/crd2_view"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="30dp"
        app:cardBackgroundColor="@color/test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

        <ImageView
            android:id="@+id/img2_task"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_assignment" />

        <TextView
            android:id="@+id/tvp_judultask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:text="Syarat Bikin SIM"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvp_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:text="tes"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvp_waktu"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="264dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:text="9.00 AM"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>