<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sharetodo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoapp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareToDo">
        <activity android:name=".activity.WelcomePage"></activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.DetailMyTaskActivity" />
        <activity android:name=".activity.DetailTaskActivity" />
        <activity android:name=".activity.UpdateTaskActivity" />
        <activity android:name=".activity.ForgotPassword" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.RegistrationActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.MyTaskActivity" />
        <activity android:name=".activity.AddTaskActivity" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>